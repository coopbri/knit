{
  "name": "knit",
  "version": "1.0.0-pre.53",
  "description": "ðŸ§¶ Knit local dependencies together",
  "license": "MIT",
  "homepage": "https://github.com/coopbri/knit",
  "repository": {
    "type": "git",
    "url": "https://github.com/coopbri/knit.git"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "bin": "src/knit.js",
  "main": "src/index.js",
  "scripts": {
    "build": "tsc",
    "clean": "ts-clean-built --old && trash  **/*.log",
    "lint": "eslint --ext .ts src",
    "format": "prettier . --write",
    "test": "tsc && mocha test && yarn lint",
    "test-dev": "ts-node-dev -T --respawn node_modules/mocha/bin/mocha test/index.ts",
    "ci": "tsc && yarn test",
    "prepublishOnly": "yarn clean && tsc && yarn test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "knit check && pretty-quick --staged"
    }
  },
  "dependencies": {
    "@npmcli/arborist": "^6.3.0",
    "chalk": "^5.3.0",
    "detect-indent": "6.1.0",
    "fs-extra": "^11.1.1",
    "glob": "^10.3.3",
    "ignore": "^5.2.4",
    "ini": "^4.1.1",
    "node-fetch": "^3.3.2",
    "npm-packlist": "^7.0.4",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.1",
    "@types/glob": "^8.1.0",
    "@types/ini": "^1.3.31",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.4.7",
    "@types/npm-packlist": "^7.0.0",
    "@types/npmcli__arborist": "^5.6.1",
    "@types/yargs": "^17.0.24",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "clean-ts-built": "^1.0.0",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^8.9.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-typescript-sort-keys": "^2.3.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "husky": "^8.0.3",
    "mocha": "^10.2.0",
    "prettier": "^3.0.1",
    "pretty-quick": "^3.1.3",
    "trash-cli": "^5.0.0",
    "ts-clean-built": "^1.3.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6"
  }
}
